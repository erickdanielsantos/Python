print("Calculadora")

n1 = float(input("Digite o primeiro numero: "))
op = input("Digite o operador (+,-,*,/): ")
n2 = float(input("Digite o segundo numero: "))

if op == "+":
    print("Resultado:", n1 + n2)
elif op == "-":
    print("Resultado:", n1 - n2)
elif op == "*":
    print("Resultado:", n1 * n2)
elif op == "/":
    print("Resultado:", n1 / n2)
