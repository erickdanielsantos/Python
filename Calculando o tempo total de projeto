atA = int(input("Informe os dias para a atividade A: "))
atB = int(input("Informe os dias para a atividade B: "))
atC = int(input("Informe os dias para a atividade C: "))

if atA < 0 or atB < 0 or atC < 0:
    print("Erro: Os dias nÃ£o podem ser negativos.")
else:
    diasT = atA + atB + atC
    print(f"Tempo total do projeto foi de {diasT} dias.")
